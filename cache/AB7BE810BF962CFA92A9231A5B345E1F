<!DOCTYPE html> <html ng-app="appModule"> <head> <title>用户登陆</title> <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"> <meta http-equiv="Content-Type" content="text/html; charset=utf-8"> <meta content="width=device-width,user-scalable=no" name="viewport"> <meta name="apple-mobile-web-app-capable" content="yes" /> <meta name="apple-mobile-web-app-status-bar-style" content="black" /> <meta content="black" name="apple-mobile-web-app-status-bar-style" /> <link rel="stylesheet" type="text/css" href="/resources/semantic-ui/semantic.min.css"> <script type="text/javascript" src="/resources/jquery/jquery-3.3.1.min.js"></script> <script type="text/javascript" src="/resources/semantic-ui/semantic.min.js"></script> <script type="text/javascript" src="/resources/angular/angular.min.js"></script> <script type="text/javascript"> var addModule = angular.module("appModule", []); var redirect = "\/admin\/content_templates\/articles_template"; addModule.controller("formController", function ($http, $scope) { $scope.admin = {account: "admin", password: "274455411"}; $scope.login = function () { if($scope.admin.account==undefined || $scope.admin.password==undefined || $scope.admin.account=="" || $scope.admin.password==""){ alert("帐号或密码不能为空！"); return } var form = new FormData(); form.append("account",$scope.admin.account); form.append("password",$scope.admin.password); $http.post("loginAdmin",form,{transformRequest: angular.identity,headers: {'Content-Type':undefined}}).then(function (response) { var status = response.data; if (status.Code==0) { if(redirect==""){ window.location.replace("/admin"); return; } window.location.replace(redirect); } else { alert(status.Message); $scope.admin.password =""; } }); }; }) </script> <style> html, body { padding: 0px; margin: 0px; } * { font-family: "微软雅黑", "Helvetica Neue", Arial, Verdana, sans-serif; } table { width: 100%; } .column { max-width: 450px; } #content { padding: 20px; } #foot { text-align: center; margin-top: 100px; bottom: 0px; left: 0px; right: 0px; } body > .grid { height: 80%; } </style> </head> <body ng-controller="formController"> <div class="ui middle aligned center aligned grid"> <div class="column"> <h2 class="ui teal header"> <div class="content"> 管理用户登陆 </div> </h2> <form class="ui large form" ng-submit="login()"> <div class="ui stacked segment"> <div class="field"> <div class="ui left icon input"> <i class="user icon"></i> <input type="text" required="" maxlength="32" minlength="5" placeholder="账号" ng-model="admin.account"> </div> </div> <div class="field"> <div class="ui left icon input"> <i class="lock icon"></i> <input type="password" required="" class="form-control" minlength="6" maxlength="32" ng-model="admin.password" placeholder="请输入密码"> </div> </div> <button type="submit" class="ui fluid large teal submit button">登陆</button> </div> <div class="ui error message"></div> </form> <div class="ui message"> <small></small> <small><a href=""></a></small> <small><a href=""></a></small> </div> </div> </div> </body> </html>